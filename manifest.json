{
  "manifest_version": 3,
  "name": "No More Scroll Hell",
  "author": "juancmandev",
  "version": "0.1.0",
  "permissions": [
    "scripting",
    "activeTab",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "No More Scroll Hell"
  },
  "host_permissions": [
    "https://*/*"
  ]
}